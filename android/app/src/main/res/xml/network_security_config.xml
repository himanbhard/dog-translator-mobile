<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system CAs for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartextTraffic for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Explicitly allow Cloud Run domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">run.app</domain>
        <domain includeSubdomains="true">us-east1.run.app</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </domain-config>
</network-security-config>
